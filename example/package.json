{
  "name": "admob-example-app",
  "version": "1.0.0",
  "description": "Exemplo de aplicativo Cordova usando AdMob Native Java Plugin",
  "main": "index.js",
  "scripts": {
    "build": "cordova build android",
    "run": "cordova run android",
    "clean": "cordova clean android",
    "prepare": "cordova prepare android",
    "add-plugin": "cordova plugin add ../",
    "remove-plugin": "cordova plugin remove admob-native-java-help",
    "reinstall-plugin": "npm run remove-plugin && npm run add-plugin",
    "logs": "adb logcat | grep MainActivity"
  },
  "keywords": [
    "cordova",
    "admob",
    "android",
    "ads",
    "banner",
    "interstitial"
  ],
  "author": "Seu Nome",
  "license": "MIT",
  "devDependencies": {
    "cordova": "^12.0.0",
    "cordova-android": "^12.0.0"
  },
  "cordova": {
    "platforms": [
      "android"
    ],
    "plugins": {
      "admob-native-java-help": {
        "AD_TYPE": "banner,interstitial",
        "AD_POSITION": "bottom",
        "BANNER_AD_UNIT_ID": "ca-app-pub-3940256099942544/6300978111",
        "INTERSTITIAL_AD_UNIT_ID": "ca-app-pub-3940256099942544/1033173712",
        "APP_ID": "ca-app-pub-3940256099942544~3347511713",
        "BANNER_SHOW_ON_PAGES": "index.html,game.html,menu.html"
      }
    }
  }
}